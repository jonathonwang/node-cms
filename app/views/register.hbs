<div class="container-fluid">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-4">
      <h1>{{ title }}</h1>
      <form action="/register" method="post">
        <div class="form-group">
          <div class="row">
            <div class="col-xs-6">
              <label for="first_name">First Name:</label>
              <input type="text" name="first_name" class="form-control" placeholder="Steve">
            </div>
            <div class="col-xs-6">
              <label for="last_name">Last Name:</label>
              <input type="text" name="last_name" class="form-control" placeholder="Buschemi">
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="email" class="required">Email:</label>
          <input type="email" name="email" class="form-control" placeholder="hello@world.com" required>
        </div>
        <div class="form-group">
          <label for="password" class="required">Password:</label>
          <input type="password" name="password" class="form-control" placeholder="password" required>
        </div>
        <div class="form-group">
          <input type="submit" class="btn btn-primary form-control">
        </div>
      </form>
      <div class="row">
        <div class="col-xs-6 text-left">
          <a href="/login">Login</a>
        </div>
        <div class="col-xs-6 text-right">
          <a href="users/forgot-password">Forgot Password</a>
        </div>
      </div>
    </div>
  </div>
</div>
